<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.fireflysource.com/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.fireflysource.com/beans http://www.fireflysource.com/beans.xsd">

	<component-scan base-package="test.server" />
	<mvc view-path="/template" view-encoding="UTF-8" />

	<bean class="com.firefly.codec.http2.stream.HTTP2Configuration">
		<property name="serverHome" value="target/test-classes/page"></property>
		<property name="host" value="localhost"></property>
		<property name="port" value="6655"></property>
		<property name="secureConnectionEnabled" value="true"></property>
		<property name="errorPage">
			<map>
				<entry key="404" value="/error/err404.html"></entry>
				<entry key="500" value="/error/err500.html"></entry>
			</map>
		</property>
		<property name="tcpConfiguration" ref="tcpConfiguration"></property>
		<property name="initialStreamSendWindow" value="131070"></property>
		<property name="initialSessionRecvWindow" value="131070"></property>
		<property name="sslContextFactory">
			<ref bean="sslContextFactory" />
		</property>
	</bean>
	
	<bean id="tcpConfiguration" class="com.firefly.net.Config">
		<property name="timeout" value="80000"></property>
	</bean>
	
	<bean id="sslContextFactory" class="com.firefly.net.tcp.ssl.FileSSLContextFactory">
		<constructor>
			<argument type="java.lang.String" value="target/test-classes/fireflySSLkeys.jks"></argument>
			<argument type="java.lang.String" value="123456"></argument>
			<argument type="java.lang.String" value="123456"></argument>
		</constructor>
	</bean>

</beans>
